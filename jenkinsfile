pipeline {
    agent any
    tools {
        jdk 'JDK17'
        maven 'Maven'
    }
    environment {
        SONAR_SCANNER = tool 'SonarQubeScanner'
    }

    stages {
        // Stage 1: Checkout
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // Stage 2: Build
        stage('Build') {
            steps {
                sh 'mvn clean compile'
            }
        }

        // Stage 3: Test
        stage('Test') {
            steps {
                sh 'mvn test'
                junit 'target/surefire-reports/*.xml'
            }
        }

        // Stage 4: Package
        stage('Package') {
            steps {
                sh 'mvn package -DskipTests'
            }
        }

        // Stage 5: SonarQube Analysis
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh """
                        ${SONAR_SCANNER}/bin/sonar-scanner \
                        -Dsonar.projectKey=devopsSecure \
                        -Dsonar.sources=. \
                        -Dsonar.java.binaries=target/classes \
                        -Dsonar.host.url=http://localhost:9000
                    """
                }
            }
        }

        // Stage 6: Docker Build & Push to Nexus
                stage('Docker Push to Nexus') {
                    steps {
                        withCredentials([usernamePassword(credentialsId: 'nexus-creds', usernameVariable: 'NEXUS_USER', passwordVariable: 'NEXUS_PASS')]) {
                            sh """
                                docker build -t 192.168.56.10:5000/kaddem:0.0.1 .
                                echo "$NEXUS_PASS" | docker login 192.168.56.10:5000 -u "$NEXUS_USER" --password-stdin
                                docker push 192.168.56.10:5000/kaddem:0.0.1
                            """
                        }
                    }
                }


    }

    post {
        always {
            cleanWs()
        }
    }
}