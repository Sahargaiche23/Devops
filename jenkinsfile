pipeline {
    agent any
    tools {
        jdk 'JDK17'
        maven 'Maven'
    }
    stages {
        // Stage 1: Checkout (automatic in multibranch)
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // Stage 2: Build and Test
        stage('Build & Test') {
            steps {
                sh 'mvn clean package'
                junit 'target/surefire-reports/*.xml'
            }
        }


        // Stage 4: Docker Build (Optional)
        stage('Docker Build') {
            steps {
                script {
                    docker.build("your-dockerhub/kaddem:${env.BRANCH_NAME}").push()
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}