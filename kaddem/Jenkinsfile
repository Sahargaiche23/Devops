pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                dir('kaddem') {
                    sh 'mvn clean install -DskipTests'
                }
            }
        }
        stage('Unit Test') {
            steps {
                dir('kaddem') {
                    sh 'mvn test'
                }
            }
        }
        stage('Build application') {
            steps {
                dir('kaddem') {
                    sh 'mvn package'
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                dir('kaddem') { // 
                    script {
                        def scannerHome = tool 'SonarQube Scanner' // Vérifie le nom de ton scanner
                        withSonarQubeEnv('sonnar_devops') { // Utilise bien l’ID correct des credentials
                            sh "${scannerHome}/bin/sonar-scanner"
                        }
                    }
                }
            }
        }
    }
}
