pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                dir('kaddem') {
                    sh 'mvn clean install -DskipTests'
                }
            }
        }
        stage('Unit Test') {
            steps {
                dir('kaddem') {
                    sh 'mvn test'
                }
            }
        }
        stage('Build application') {
            steps {
                dir('kaddem') {
                    sh 'mvn package'
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                dir('kaddem') {
                    withSonarQubeEnv('sonnar_devops') { // Vérifie que 'sonnar_devops' est bien configuré dans Jenkins
                        sh 'sonar-scanner' // Supprime la partie "${scannerHome}/bin/"
                    }
                }
            }
        }
    }
}
