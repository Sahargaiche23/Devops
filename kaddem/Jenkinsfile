pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                dir('kaddem') {  // Exécute les commandes dans le répertoire kaddem
                    sh 'mvn clean install -DskipTests'
                }
            }
        }
        stage('Unit Test') {
            steps {
                dir('kaddem') {  // Exécute les commandes dans le répertoire kaddem
                    sh 'mvn test'
                }
            }
        }
        stage('Build application') {
            steps {
                dir('kaddem') {  // Exécute les commandes dans le répertoire kaddem
                    sh 'mvn package'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'SonarQube Scanner' // Vérifie le nom de ton scanner
                    withSonarQubeEnv('sonnar_devops') { // Utilise le bon ID des credentials Sonar
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }

    }
}