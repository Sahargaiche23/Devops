pipeline {
    agent any

    stages {
        stage('Install dependencies') {
            steps {
                dir('kaddem') {
                    sh 'mvn clean install -DskipTests'
                }
            }
        }

        stage('Unit Test') {
            steps {
                dir('kaddem') {
                    sh 'mvn test'
                }
            }
        }
        stage('SonarQube Analysis') {
                    steps {
                        dir('kaddem') {
                            script {
                                def scannerHome = tool name: 'SonarQubeScanner', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
                                withSonarQubeEnv('SonarQube') { // Replace 'SonarQube' with your SonarQube server name configured in Jenkins
                                    sh "${scannerHome}/bin/sonar-scanner_devops"
                                }
                            }
                        }
                    }

        stage('Build application') {
            steps {
                dir('kaddem') {
                    sh 'mvn package'
                }
            }
        }


        }
    }
}